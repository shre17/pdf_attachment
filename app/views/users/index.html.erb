<div class="container-fluid" id="container">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col-md-6">
      <h1>Users List</h1>
    </div>
    <div class="col-md-6">
    <p class= "pdf_link"><%= link_to "Get all in PDF", pdf_users_path(format: "pdf"), class: "btn btn-success float-right" %></p>
    </div>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Contact</th>
        <th>Address</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.contact %></td>
          <td><%= user.address %></td>
          <td><%= link_to 'Show', user, class: "btn btn-info" %></td>
          <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-warning" %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New User', new_user_path, class: "btn btn-primary mb-4" %>
</div>